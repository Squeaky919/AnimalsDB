	"item": [
		{
			"name": "Add Animal",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"var random = pm.variables.replaceIn('{{$randomFirstName}}')",
							"pm.collectionVariables.set(\"animal\", random);"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 201\", function () {",
							"    pm.response.to.have.status(201);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"animal\": \"{{animal}}\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "http://localhost:3000",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "3000"
				}
			},
			"response": []
		},
		{
			"name": "Get Animal",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var animal = pm.collectionVariables.get(\"animal\");",
							"var response = pm.response.json()",
							"var isThere = response.some(n => n.animal === animal)",
							"pm.test(`Is ${animal} there?`, () => {",
							"    pm.expect(isThere).to.be.true",
							"})"
						],
						"type": "text/javascript"
					}
				}
			],
